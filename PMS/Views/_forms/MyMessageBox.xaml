<Window x:Class="System.Windows.MyMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       
        mc:Ignorable="d"
       Title="Patient Management System" Height="250" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" Margin="10" Grid.ColumnSpan="3">
            <TextBlock x:Name="Message" Text="Message"></TextBlock>
        </Grid>

        <Border Background="WhiteSmoke" 
                Grid.Row="2" Grid.ColumnSpan="3">
        </Border>
        <StackPanel Grid.Row="2"
                    Width="164"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center" >
            <Button Width="0" Margin="2" x:Name="OK">OK</Button>
            <Button Width="80" Margin="42, 2, 2, 2"
                    x:Name="Cancel">Close</Button>
        </StackPanel>
    </Grid>
</Window>
